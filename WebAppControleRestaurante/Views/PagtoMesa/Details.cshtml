@model WebAppControleRestaurante.Models.PagtoMesaModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhe do pagamento</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Cliente" class="control-label">Nome do cliente</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Cliente" class="control-label">Número da mesa</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumMesa)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Cliente" class="control-label">Valor do consumo</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValConsumo)
        </dd>
    </dl>
</div>
<div>
    <a role="button" class="btn btn-secondary" asp-controller="PagtoMesa" asp-route-id="@Model?.Id" asp-action="Edit">Editar</a>
    <a class="btn btn-secondary" asp-controller="PagtoMesa" asp-action="Index" role="button">Voltar</a>
</div>
