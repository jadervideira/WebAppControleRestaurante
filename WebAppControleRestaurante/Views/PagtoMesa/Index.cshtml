@model IEnumerable<WebAppControleRestaurante.Models.PagtoMesaModel>

@{
    ViewData["Title"] = "Relação de Pagamentos";
}

<h1>Relação de pagamentos por mesa</h1>

<p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="PagtoMesa" asp-action="Create" role="button">Fechar consumo da mesa</a>
    </div>

</p>
<table id="table-PagtoMesaModel" class="display" runat="server">
    <thead>
         <tr>
            <th scope="col">#</th>
            <th scope="col">Nome do cliente</th>
            <th scope="col">Número da mesa</th>
            <th scope="col">Valor do consumo</th> 
            <th scope="col">Data</th> 
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
     @if (Model != null)
     {
            @foreach (var item in Model)
            {
            <tr>
             <th scope="row">
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumMesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValConsumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <div class="btn-group" role="button">
                    <a role="button" class="btn btn-primary" asp-controller="PagtoMesa" asp-route-id="@item.Id" asp-action="Details">Detalhar</a>
                    <a role="button" class="btn btn-secondary" asp-controller="PagtoMesa" asp-route-id="@item.Id" asp-action="Edit">Editar</a>
                    <a role="button" class="btn btn-danger"  asp-controller="PagtoMesa" asp-route-id="@item.Id" asp-action="Delete">Apagar</a>
                </div>
            </td>
        </tr>
    }
}
    </tbody>
</table>
